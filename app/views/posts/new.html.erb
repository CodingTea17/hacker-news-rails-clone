<h1>New Post</h1>

<%= form_for @post do |f| %>
  <!-- Post Title -->
  <%= f.label :title %>
  <%= f.text_field :title %>

  <!-- Post Link -->
  <%= f.label :link %>
  <%= f.text_field :link %>

  <!-- Post Author -->
  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.submit :class => "btn btn-success" %>
<% end %>
