<%= render('layouts/errors', :object => @comment) %>

<%= form_for [@post, @comment] do |f| %>
  <div class="form-row">
    <div class="form-group col-4">
      <%= f.label :comment %>
      <%= f.text_field :comment, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-4">
      <%= f.label :author %>
      <%= f.text_field :author, :class=>"form-control" %>
    </div>
  </div>
  <p><%= f.submit :class => "btn btn-success" %></p>
<% end %>
